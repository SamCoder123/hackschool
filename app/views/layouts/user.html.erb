<!DOCTYPE html>
<html>
  <head>
    <%= render_page_title_tag %>
    <%= render_page_description_meta_tag %>
    <%= csrf_meta_tags %>
    <link rel="shortcut icon" href="/images/ruby.png">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'simplemde.min' %>


  </head>

  <body>

    <%= render "common/navbar" %>
    <div class="container">
      <%= render "common/flashes" %>
      <div class="row page-wrap" style="padding-top:20px;">
        <div class="col-md-2">

          <ul class="nav nav-pills nav-stacked" style="max-width: 300px">

            <%= active_link_to("我的课程", account_courses_path , :active => :inclusive, :wrap_tag => :li ) %>
            <%= active_link_to("我的订单", account_orders_path , :active => :inclusive, :wrap_tag => :li ) %>
            <%= active_link_to("我的收藏", account_favorites_path, :active => :inclusive, :wrap_tag => :li ) %>
            <%= active_link_to("我的", account_settings_path , :active => :inclusive, :wrap_tag => :li ) %>

          </ul>

        </div>

        <div class="col-md-10 content-footer-height250">
          <%= render_breadcrumb %>
          <%= yield %>
        </div>
      </div>
      <%= render "common/footer" %>
    </div>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'simplemde.min' %>

    <%= yield :application_javacript %>

    <script type='text/javascript'>
      (function(m, ei, q, i, a, j, s) {
          m[i] = m[i] || function() {
              (m[i].a = m[i].a || []).push(arguments)
          };
          j = ei.createElement(q),
              s = ei.getElementsByTagName(q)[0];
          j.async = true;
          j.charset = 'UTF-8';
          j.src = '//static.meiqia.com/dist/meiqia.js';
          s.parentNode.insertBefore(j, s);
      })(window, document, 'script', '_MEIQIA');
      _MEIQIA('entId', 31157);
    </script>

    </body>
  </html>
