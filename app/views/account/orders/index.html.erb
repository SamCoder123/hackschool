
<table class="table table-striped table-bordered table-list">
  <thead>
    <tr>
      <th>订单编号</th>
        <th>描述</th>
        <th>价格</th>
        <th>订单状态</th>
        <th>选项</th>
        <th>订单创建时间</th>
    </tr>
  </thead>
<% @orders.each do |order| %>
  <tbody>
    <tr>
      <td> <%= link_to(order.token[0..12], account_order_path(order.token)) %> </td>
      <td> <%= render_order_description(order) %></td>
      <td> ¥ <%= order.price %> </td>
      <td>
        <% if order.unpaid? %>
          未支付
        <% elsif order.paid? %>
          已支付
        <% else %>
          订单已取消
        <% end %>
      </td>
      <td>
        <%= render_order_payment_part_in_user_panel(order) %>
       </td>
       <td><%= render_formatted_time(order.created_at) %></td>
   </tr>
  </tbody>
<% end %>
</table>
